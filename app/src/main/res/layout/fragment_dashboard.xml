<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tere_mary.advanced_app.Fragment_Dashboard">

    <RelativeLayout
        android:id="@+id/RelativeLayout_Dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/CardView_Expenses"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ListView
                android:id="@+id/ListView_Expenses"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/TextView_JExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview Expenses"
                android:textSize="24sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TextView_JTotEx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:text="Total Expenses"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/TextView_TotalEx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/TextView_JTotEx"
                    android:layout_alignBottom="@+id/TextView_JTotEx"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:layout_toEndOf="@+id/TextView_JTotEx"
                    android:layout_toRightOf="@+id/TextView_JTotEx"
                    android:hint="$ 0000"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CardView_Income"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/CardView_Expenses"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/TextView_JIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overview Income"
                android:textSize="24sp" />

            <ListView
                android:id="@+id/ListView_Income"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="40dp"
                android:scrollbars="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TextView_JTotIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:text="Total Income"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/TextView_TotIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/TextView_JTotIn"
                    android:layout_marginLeft="33dp"
                    android:layout_marginStart="33dp"
                    android:layout_toEndOf="@+id/TextView_JTotIn"
                    android:layout_toRightOf="@+id/TextView_JTotIn"
                    android:hint="$ 0000"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/TextView_JBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:text="Balance"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/TextView_Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_toEndOf="@+id/TextView_JBalance"
            android:layout_toRightOf="@+id/TextView_JBalance"
            android:hint="$ 0000"
            android:textSize="24sp" />

    </RelativeLayout>
</FrameLayout>
