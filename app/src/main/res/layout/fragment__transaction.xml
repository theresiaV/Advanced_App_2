<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tere_mary.advanced_app.Fragment_Transaction">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/RelativeLayout_Input"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/CardView_Expenses"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                >

                <TextView
                    android:id="@+id/TextView_Expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Expenses"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/EditText_DeskripsiExpnses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="53dp"
                    android:ems="10"
                    android:hint="Description"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/EditText_AmountExpenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/EditText_DeskripsiExpnses"
                    android:layout_alignStart="@+id/EditText_DeskripsiExpnses"
                    android:layout_below="@+id/EditText_DeskripsiExpnses"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="number" />

                <Button
                    android:id="@+id/Button_AddExpenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginRight="27dp"
                    android:text="Add Expenses"
                    android:scrollbarStyle="outsideInset"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/CardView_Income"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:id="@+id/RelativeLayout_Income"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/TextView_Income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Income"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/EditText_DeskripsiIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="53dp"
                    android:ems="10"
                    android:hint="Description"
                    android:inputType="textPersonName"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/EditText_AmountIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/EditText_DeskripsiIncome"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:hint="Amount"
                    android:inputType="number" />

                <Button
                    android:id="@+id/Button_AddIncome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginRight="36dp"
                    android:text="Add Income"
                    android:scrollbarStyle="outsideInset"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
